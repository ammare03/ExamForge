<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark mode version of the application theme. -->
    <style name="Base.Theme.ExamForge" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/primary_dark_mode</item>
        <item name="colorPrimaryVariant">@color/primary_dark_dark_mode</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent_dark_mode</item>
        <item name="colorSecondaryVariant">@color/accent_dark_dark_mode</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_text_primary</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>
        
        <!-- Typography - using same styles but colors are overridden in values-night/colors.xml -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.ExamForge.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.ExamForge.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.ExamForge.HeadlineSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.ExamForge.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.ExamForge.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.ExamForge.BodySmall</item>
        
        <!-- Shape appearance for components -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.ExamForge.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.ExamForge.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.ExamForge.LargeComponent</item>
    </style>
    
    <!-- Button styles for dark mode -->
    <style name="Widget.ExamForge.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/accent_dark_mode</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <!-- Card styles for dark mode -->
    <style name="Widget.ExamForge.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/dark_card_background</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="contentPadding">16dp</item>
    </style>
</resources>