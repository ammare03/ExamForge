<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="24dp"
    android:background="@drawable/bg_gradient">

    <!-- App Logo -->
    <ImageView
        android:id="@+id/ivNavLogo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/app_logo"
        android:contentDescription="App Logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- App Name -->
    <TextView
        android:id="@+id/tvNavAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ExamForge"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/ivNavLogo"
        app:layout_constraintBottom_toTopOf="@id/tvNavTagline"
        app:layout_constraintStart_toEndOf="@id/ivNavLogo" />
    
    <!-- App Tagline -->
    <TextView
        android:id="@+id/tvNavTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create. Share. Excel."
        android:textColor="@color/white"
        android:alpha="0.8"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@id/ivNavLogo"
        app:layout_constraintStart_toEndOf="@id/ivNavLogo" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/white"
        android:alpha="0.2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ivNavLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
        
    <!-- User Profile Section -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivNavUserPhoto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/white"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.ExamForge.Circle"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- User Name -->
    <TextView
        android:id="@+id/tvNavUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/ivNavUserPhoto"
        app:layout_constraintBottom_toBottomOf="@id/ivNavUserPhoto"
        app:layout_constraintStart_toEndOf="@id/ivNavUserPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>